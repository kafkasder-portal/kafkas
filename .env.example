# KAF Portal Environment Configuration
# Copy this file to .env.local and fill in your actual values

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NODE_ENV=development
VITE_APP_VERSION=1.0.0
VITE_BUILD_TIME=
VITE_APP_NAME="Kafkas DerneÄŸi Portal"
VITE_APP_DESCRIPTION="Modern NGO Management System"

# ===========================================
# API CONFIGURATION
# ===========================================
# Backend API URL
VITE_API_URL=http://localhost:5000
# Alternative API URLs for different environments
VITE_API_URL_STAGING=https://staging-api.kafportal.com
VITE_API_URL_PRODUCTION=https://api.kafportal.com

# Backend Server Configuration
PORT=5000
BACKEND_URL=http://localhost:5000
FRONTEND_URL=http://localhost:5173

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
VITE_PUBLIC_SUPABASE_URL="your-supabase-url"
VITE_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"

# Optional: API Configuration
# VITE_API_URL="your-api-url"

# Development Configuration
VITE_ENV="development"

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgresql://username:password@localhost:5432/kafportal
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=kafportal
DATABASE_USER=kafportal_user
DATABASE_PASSWORD=your_database_password
DATABASE_SSL=false

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=24h
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# ===========================================
# MONITORING & ANALYTICS
# ===========================================
VITE_ENABLE_MONITORING=true
VITE_ENABLE_ANALYTICS=true
VITE_MONITORING_INTERVAL=5000
VITE_ANALYTICS_ENDPOINT=/api/analytics
VITE_HEALTH_ENDPOINT=/api/health

# Performance thresholds
VITE_LCP_THRESHOLD=2500
VITE_FID_THRESHOLD=100
VITE_CLS_THRESHOLD=0.1

# Analytics configuration
VITE_ANALYTICS_BATCH_SIZE=100
VITE_ANALYTICS_FLUSH_INTERVAL=30000

# ===========================================
# THIRD-PARTY SERVICES
# ===========================================
# Google Maps API (for location services)
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@kafkasder.org

# SMS Service (for notifications)
SMS_API_KEY=your-sms-api-key
SMS_API_SECRET=your-sms-api-secret

# Cloud Storage (for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-west-1
AWS_S3_BUCKET=kafportal-files

# ===========================================
# LOGGING & ERROR TRACKING
# ===========================================
# Sentry for error tracking
VITE_SENTRY_DSN=your-sentry-dsn
SENTRY_ORG=kafkasder
SENTRY_PROJECT=kafportal

# Log levels
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# ===========================================
# REDIS CONFIGURATION (for caching)
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# FEATURE FLAGS
# ===========================================
VITE_ENABLE_REALTIME=true
VITE_ENABLE_WEBSOCKET=true
VITE_ENABLE_OFFLINE_MODE=false
VITE_ENABLE_PWA=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_MULTI_LANGUAGE=true

# ===========================================
# DEPLOYMENT SETTINGS
# ===========================================
# Vercel
VERCEL_TOKEN=your-vercel-token
VERCEL_ORG_ID=your-org-id
VERCEL_PROJECT_ID=your-project-id

# Docker
DOCKER_REGISTRY=registry.hub.docker.com
DOCKER_IMAGE_NAME=kafportal
DOCKER_IMAGE_TAG=latest

# ===========================================
# TESTING CONFIGURATION
# ===========================================
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/kafportal_test
CYPRESS_BASE_URL=http://localhost:5173

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# CORS CONFIGURATION
# ===========================================
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true

# ===========================================
# FILE UPLOAD SETTINGS
# ===========================================
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/csv
UPLOAD_PATH=./uploads