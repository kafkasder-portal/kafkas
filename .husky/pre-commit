#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run linting
echo "📝 Running ESLint..."
npm run lint

# Run type checking
echo "🔧 Running TypeScript check..."
npm run type-check

# Run tests
echo "🧪 Running tests..."
npm run test:unit

# Run format check
echo "🎨 Checking code format..."
npm run format:check

echo "✅ Pre-commit checks passed!"
