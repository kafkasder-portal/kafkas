{
  "name": "kafportal",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=22.12.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "vercel-build": "npm run build",
    "preview": "vite preview",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext js,jsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "test": "vitest",
    "test:unit": "vitest run --reporter=verbose",
    "test:integration": "vitest run --config vitest.integration.config.js",
    "test:e2e": "cypress run",
    "test:e2e:headless": "cypress run --headless",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:build": "npm run build && npm run preview & sleep 10 && curl -f http://localhost:4173/",
    "docs:generate": "jsdoc -c jsdoc.json",
    "docs:serve": "jsdoc -c jsdoc.json --serve",
    "analyze": "vite-bundle-analyzer",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "postinstall": "husky install"
    "analyze": "npm run build && npx vite-bundle-analyzer dist",
    "clean": "rimraf dist coverage .nyc_output",
    "prebuild": "npm run clean",
    "start": "vite preview --port 4173 --host"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.56.0",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "cors": "^2.8.5",
    "dompurify": "^3.0.9",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "framer-motion": "^12.23.12",
    "i18next": "^23.10.0",
    "i18next-browser-languagedetector": "^7.2.0",
    "lucide-react": "^0.330.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.6.0",
    "react-i18next": "^14.1.0",
    "react-router-dom": "^6.30.1",
    "rimraf": "^6.0.1",
    "sonner": "^1.4.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^21.1.7",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "esbuild": "^0.25.9",
    "eslint": "^9.33.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.2.5",
    "rollup-plugin-visualizer": "^5.12.0",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  }
}
