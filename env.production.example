# Production Environment Variables

# Application Configuration
VITE_APP_TITLE=KAF Portal
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Kardeşlik ve Yardımlaşma Foundation Portal
VITE_BUILD_ID=prod-build

# API Configuration (Production URLs)
VITE_API_BASE_URL=https://your-domain.com/api
VITE_API_TIMEOUT=30000
VITE_BACKEND_URL=https://your-domain.com

# Supabase Configuration (Production)
VITE_PUBLIC_SUPABASE_URL=https://your-production-supabase-url.supabase.co
VITE_PUBLIC_SUPABASE_ANON_KEY=your-production-supabase-anon-key

# Authentication (Production)
VITE_JWT_SECRET=your-super-secure-jwt-secret-minimum-32-chars
VITE_JWT_EXPIRES_IN=24h
VITE_SESSION_TIMEOUT=12h

# Security (Production)
VITE_ENABLE_HTTPS=true
VITE_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
VITE_CSRF_SECRET=your-csrf-secret-key

# Error Monitoring & Logging (Production)
VITE_ERROR_LOGGING_ENDPOINT=https://your-logging-service.com/api/errors
VITE_SENTRY_DSN=https://your-sentry-dsn.ingest.sentry.io/project-id
VITE_LOG_LEVEL=error

# Feature Flags (Production)
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_LOGGING=true
VITE_ENABLE_DEV_TOOLS=false
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_OFFLINE_MODE=true

# External Services (Production)
VITE_GOOGLE_MAPS_API_KEY=your-production-google-maps-api-key
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_WHATSAPP_API_URL=https://graph.facebook.com/v17.0
VITE_EMAIL_SERVICE_URL=https://your-email-service.com/api

# WhatsApp Cloud API Configuration (Production)
VITE_WHATSAPP_PHONE_NUMBER_ID=your_production_phone_number_id
VITE_WHATSAPP_ACCESS_TOKEN=your_production_access_token

# Database (Production)
VITE_DB_POOL_SIZE=20
VITE_DB_TIMEOUT=10000

# Performance (Production)
VITE_ENABLE_SERVICE_WORKER=true
VITE_CACHE_TIMEOUT=86400000

# Environment
NODE_ENV=production