# =====================================================
# KAF PORTAL PRODUCTION ENVIRONMENT VARIABLES
# =====================================================

# Supabase Configuration
VITE_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
VITE_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Backend API Configuration
VITE_API_URL=https://your-backend-domain.com/api

# Frontend Configuration
VITE_APP_NAME=Kafkas DerneÄŸi Portal
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=production

# Feature Flags
VITE_ENABLE_PWA=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_MONITORING=true
VITE_ENABLE_ERROR_TRACKING=true

# Analytics Configuration
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_SENTRY_DSN=https://your-sentry-dsn.ingest.sentry.io/xxxxx

# Performance Monitoring
VITE_PERFORMANCE_MONITORING=true
VITE_WEB_VITALS_TRACKING=true

# Security
VITE_ENABLE_HTTPS=true
VITE_ENABLE_CSP=true

# Real-time Features
VITE_ENABLE_WEBSOCKET=true
VITE_WEBSOCKET_URL=wss://your-backend-domain.com

# Internationalization
VITE_DEFAULT_LOCALE=tr
VITE_SUPPORTED_LOCALES=tr,en,ru

# File Upload
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Cache Configuration
VITE_CACHE_DURATION=3600
VITE_ENABLE_SERVICE_WORKER=true

# Development/Production Flags
VITE_DEV_MODE=false
VITE_ENABLE_LOGGING=false
VITE_ENABLE_DEBUG=false
