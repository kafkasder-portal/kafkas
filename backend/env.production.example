# Production Backend Environment Variables

# Server Configuration
PORT=5001
NODE_ENV=production
HOST=0.0.0.0

# Database Configuration (Production)
SUPABASE_URL=https://your-production-supabase-url.supabase.co
SUPABASE_SERVICE_KEY=your-production-supabase-service-key
SUPABASE_ANON_KEY=your-production-supabase-anon-key

# CORS Configuration (Production)
FRONTEND_URL=https://your-domain.com
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# JWT Configuration (Production)
JWT_SECRET=your-super-secure-jwt-secret-minimum-32-characters-for-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Authentication (Production)
BCRYPT_ROUNDS=14
SESSION_SECRET=your-production-session-secret-key-very-secure
COOKIE_SECRET=your-production-cookie-secret-key-very-secure

# Rate Limiting (Production)
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=50
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# Security (Production)
ENABLE_HELMET=true
ENABLE_RATE_LIMITING=true
TRUST_PROXY=1

# Logging (Production)
LOG_LEVEL=error
ENABLE_REQUEST_LOGGING=false

# Email Configuration (Production)
EMAIL_SERVICE_URL=https://your-email-service.com/api
EMAIL_API_KEY=your-production-email-api-key
FROM_EMAIL=noreply@your-domain.com

# WhatsApp Configuration (Production)
WHATSAPP_ACCESS_TOKEN=your-production-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-production-phone-number-id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# File Upload (Production)
MAX_FILE_SIZE=5MB
UPLOAD_PATH=/app/uploads

# Cache Configuration (Production)
CACHE_TTL=7200
REDIS_URL=redis://your-redis-instance:6379

# Monitoring (Production)
ENABLE_PERFORMANCE_MONITORING=true
HEALTH_CHECK_INTERVAL=60000
ERROR_REPORTING_URL=https://your-error-reporting-service.com/api

# External APIs (Production)
GOOGLE_MAPS_API_KEY=your-production-google-maps-api-key
EXTERNAL_API_TIMEOUT=15000

# SSL/TLS (Production)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# Database Connection Pool (Production)
DB_POOL_MIN=5
DB_POOL_MAX=25
DB_POOL_IDLE_TIMEOUT=30000

# API Versioning
API_VERSION=v1
ENABLE_API_DOCS=false
